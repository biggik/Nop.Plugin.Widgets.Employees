@{
    Layout = "~/Plugins/Widgets.Employees/Views/Shared/_AdminShared.cshtml";
}
@model DepartmentModel
@using Nop.Plugin.Widgets.Employees.Models;
@using Nop.Plugin.Widgets.Employees.Resources;
@using Nop.Plugin.Widgets.Employees.Controllers;
@{
    ViewBag.PageTitle = T(AdminResources.EditDepartmentCaption).Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "department-form" }))
{
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T(AdminResources.EditDepartmentCaption)
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                @Html.ActionLink(T(DepartmentActionResources.BackToList).Text,
                    nameof(DepartmentsController.List),
                    DepartmentsController.ControllerName,
                    new { area = "Admin" },
                    null)
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="department-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    <partial name="_CreateOrUpdateDepartment.cshtml" />
}
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="department-delete" asp-action="Delete" />
