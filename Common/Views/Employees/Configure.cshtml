@{
    Layout = "_ConfigurePlugin";
}
@model ConfigurationModel
@using Nop.Plugin.Widgets.Employees.Controllers;
@using Nop.Plugin.Widgets.Employees.Models;

<form asp-controller="@EmployeesController.ControllerName" asp-action="Configure" method="post">

    <div class="content-header clearfix">
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <nop-label asp-for="WidgetZones" />
        </div>
        <div class="col-md-10">
            <nop-select asp-for="WidgetZones" asp-items="Model.AvailableWidgetZones" asp-multiple="true" />
            <script>
                $(document).ready(function() {
                    var widgetZonesInput = $('#@Html.IdFor(model => model.WidgetZones)').data("kendoMultiSelect");
                    widgetZonesInput.setOptions({
                        autoClose: false,
                        filter: "contains"
                    });
                });
            </script>
        </div>
    </div>
</form>