@{
    Layout = "~/Plugins/Widgets.Employees/Views/Shared/_Admin.cshtml";
}
@model List<Nop.Plugin.Widgets.Employees.Models.DepartmentModel>
@{
    //page title
    ViewBag.Title = T("Admin.Department.List").Text;
}
<div class="content-header clearfix">
    <h1 class="pull-left">
        @T("Admin.Department.List")
    </h1>
    <div class="pull-right">
        <a class="btn bg-blue" href="~/Employees/CreateDepartment">
            <i class="fa fa-plus-square"></i>
            @T("Admin.Department.AddNew")
        </a>
    </div>
</div>
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="department-grid"></div>

                    <script>
                $(document).ready(function () {
                    $("#department-grid").kendoGrid({
                        dataSource: {
                            type: "json",
                            transport: {
                                read: {
                                    url: "@Html.Raw(Url.Action("DepartmentList", "Employees"))",
                                    type: "POST",
                                    dataType: "json"
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "Total",
                                errors: "Errors"
                            },
                            error: function(e) {
                                display_kendoui_grid_error(e);
                                // Cancel the changes
                                this.cancelChanges();
                            },
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        pageable: {
                            refresh: true,
                            numeric: false,
                            previousNext: false,
                            info: false
                        },
                        editable: {
                            confirmation: false,
                            mode: "inline"
                        },
                        scrollable: false,
                        columns: [{
                            field: "Name",
                            title: "@T("Plugins.Widgets.Employees.Fields.DepartmentName")"
                        }, {
                            field: "DisplayOrder",
                            title: "@T("Plugins.Widgets.Employees.Fields.DepartmentDisplayOrder")",
                            width: 20
                        },{
                            field: "Published",
                            title: "@T("Plugins.Widgets.Employees.Fields.DepartmentPublished")",
                            width: 100,
                            headerAttributes: { style: "text-align:center" },
                            attributes: { style: "text-align:center" },
                            template: '# if(Published) {# <i class="fa fa-check true-icon"></i> #} else {# <i class="fa fa-close false-icon"></i> #} #'
                        },{
                            field: "Id",
                            title: "@T("Admin.Department.Edit")",
                            width: 100,
                            template: '<a href="EditDepartment/#=Id#">@T("Admin.Common.Edit")</a>'
                        }]
                    });
                });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
